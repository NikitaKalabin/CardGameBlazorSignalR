@if (GameStateModel.UpCard?.Card is not null && !string.IsNullOrEmpty(GameStateModel.UpCard.Player.UserId))
{
    @if (GameStateModel.UpCard?.Player.UserId == UserId)
    {
        <div class="card text-center mr-3" style="width: 18rem;">
            <div class="card-body">
                <PlayingCard Value="@GameStateModel.UpCard.Card"></PlayingCard>
            </div>
            <div class="card-footer text-muted">
                <em>Played by @GameStateModel.UpCard.Player.Name</em>
            </div>
        </div>
    }
}

@if (GameStateModel.MatchingCard?.Card is not null && !string.IsNullOrEmpty(GameStateModel.MatchingCard.Player.UserId))
{
    @if (GameStateModel.MatchingCard?.Player.UserId == UserId)
    {
        <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
                <PlayingCard Value="@GameStateModel.MatchingCard.Card"></PlayingCard>
            </div>
            <div class="card-footer text-muted">
                @if (!string.IsNullOrEmpty(GameStateModel.MatchingCard?.Player.UserId))
                {
                    <em>Played by @GameStateModel.MatchingCard?.Player.Name</em>
                }
            </div>
        </div>
    }
}

@code {

    [Parameter]
    public GameStateModel GameStateModel { get; set; }
    
    [Parameter]
    public String UserId { get; set; }
}
